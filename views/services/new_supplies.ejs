<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Crear nuevo insumo médico</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/services/supply" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Nombre del producto</label>
                <input class="form-control" type="text" id="name" 
                placeholder="nombre / medida(200ml) / administracion(oral,inyectable)" name="service[name]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="class">Clasificacion</label>
                <input class="form-control" type="text" id="class" name="service[class]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="principle">Principio activo</label>
                <input class="form-control" type="text" id="principle" name="service[principle]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="unit">Unidad (hora, pieza, litro)</label>
                <input class="form-control" type="text" id="unit" name="service[unit]" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="claveSat">Clave del Sat</label>
                <input class="form-control" type="number" id="claveSat" name="service[claveSat]" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="buy">Precio de compra</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control"step="any" id="buy" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="service[buy_price]" required>
                </div>            
            </div>
            <div class="mb-3">
                <label class="form-label" for="sell">Precio de venta</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" step="any" id="sell" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="service[sell_price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Caducidad</label>
                <input class="form-control" type="date" id="date" name="service[expiration]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="supplier">Proveedor</label>
                <input class="form-control" type="text" id="supplier" name="service[supplier]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="supplier">Existencias</label>
                <input class="form-control" type="number" id="supplier" name="service[stock]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="optimum">Cantidad Optima</label>
                <input class="form-control" type="number" id="optimum" name="service[optimum]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="outside">Cantidad Fuera de Bodega</label>
                <input class="form-control" type="number" id="outside" name="service[outside]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Especificaciones</label>
                <textarea class="form-control" type="text" id="description" name="service[description]"
                    ></textarea>
            </div>
            <div class="mb-3">
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline1" name="service[hospitalEntry]" value="true" class="custom-control-input" checked>
                    <label class="custom-control-label" for="customRadioInline1">Ingreso a hospital</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="customRadioInline2" name="service[hospitalEntry]" value="false" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline2">Honorarios</label>
                </div>
            </div>
            
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Escoger imagen(es)...</span>
                        <span class="form-file-button">Buscar en computadora</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Agregar insumo médico</button>
            </div>
        </form>
        <a href="/services/supply">Insumos médicos</a>
    </div>
</div>