<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-0 mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1935&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Acceder a cuenta</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Nombre de Usuario</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Informacion valida!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Contrase√±a</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Informacion valida!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>