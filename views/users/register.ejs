<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="/imgs/dino_clin.png"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Registrarse</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Nombre de usuario</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Valido!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Correo electronico</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Valido!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Contrase√±a</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Valido!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="keyword">Clave de rol</label>
                            <input class="form-control" type="password" id="keyword" name="keyword" required>
                            <div class="valid-feedback">
                                Valido!
                            </div>
                        </div>
                        <div class="d-flex justify-content-center my-4">
                        <select id="moneyBox" class="btn btn-outline-secondary btn-lg custom-select ml-2" name="moneyBox" style="max-width: 300px">
                            <% for (let box of boxes) {
                              %>
                                <option  id="<%= box._id %>" value="<%= box._id %>" data-hierarchy="<%= box.hierarchy %>"><%= box.name %></option>
                            <% } %>
                          </select>
                          </div>
                        <button class="btn btn-success btn-block">Registrarse</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>